.navbar.navbar-fixed-top.navbar-inverse{role: "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: weeler_root_path} Weeler
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li{class: 'active' if @current_menu_item == 'home'}
          %a{href: weeler_root_path} Home
        %li{class: 'active' if @current_menu_item == 'content'}
          %a{href: weeler_content_path} Content
        %li{class: 'active' if @current_menu_item == 'configurations'}
          %a{href: weeler_configurations_path} Configurations
      - if Weeler.logout_path
        %ul.nav.navbar-nav.navbar-right
          %li
            %a{href: Weeler.logout_path} Logout
