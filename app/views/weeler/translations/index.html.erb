<div class="header container">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1>Translations</h1>
        <p class="lead text-muted">Display I18n translations</p>
      </div>
      <p>
        <ul class="nav nav-pills pull-right">

          <li class="active">
            <a href="?locale=all">ALL</a>
          </li>
          <li class="">
            <a href="?locale=lv">LV</a>
          </li>
        </ul>
      </p>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <table class="table table-hover" data-provides="rowlink">
        <thead>
          <tr>
            <th>Locale</th>
            <th>Key</th>
            <th class="text-center">Value</th>
            <th class="text-center">Interpolations</th>
            <th class="text-center">Created</th>
          </tr>
        </thead>
        <tbody>
          <% @translations.each do |translation| %>
            <%= render :partial => "weeler/translations/translation", locals: {translation: translation} %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
    </div>
  </div>
</div>